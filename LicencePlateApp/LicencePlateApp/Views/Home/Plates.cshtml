@model List<LicencePlateApp.Models.LicencePlate>
<!doctype html>

<html>
<head>
    <title>Plates</title>
    <style>
        table, td, th {
            border: 1px solid black;
        }
        table {
            border-collapse: collapse;
        }
    </style>
</head>
<body>
    <form action="/search" method="get">
        <label for="q">Licence Plate: </label>
        <input type="text" name="q">
        <button type="submit">Search</button>
    </form>
    <a href="/search?police=1">Police Cars</a>
    <a href="/search?diplomat=1">Diplomatic Cars</a>
    <table>
        <thead>
            <tr>
                <th>Licence Plate</th>                
                <th>Brand</th>
                <th>Model</th>                
                <th>Color</th>               
                <th>Year</th>                
            </tr>
        </thead>
        <tbody>
            @if (@Model.Count() == 0)
            {
                <tr>
                    <td>There is no matching licence plate.</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }
            else
            {
                foreach (var car in @Model)
                {
                    <tr>
                        <td>@car.Plate</td>
                        <td><a href="/search/@car.Car_brand">@car.Car_brand</a></td>
                        <td>@car.Car_model</td>
                        <td>@car.Color</td>
                        <td>@car.Year</td>
                    </tr>
                }
            }          
        </tbody>
    </table>
</body>
</html>